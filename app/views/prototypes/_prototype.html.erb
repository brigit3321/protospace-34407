<div class="card">
  <%= link_to (image_tag prototype.image), prototype_path(prototype.id), method: :get,  class: 'prototype-image' if prototype.image.attached? %>
 
  <div class="card__body">
    <%= link_to prototype.title,  class: :card__title%>
    
    <p class="card__summary">
      <%= prototype.catch_copy %>
      
    </p>
    <%= link_to prototype.user.name, "/users/#{prototype.user.id}", method: :get, class: :card__user %>
    
  </div>
</div>